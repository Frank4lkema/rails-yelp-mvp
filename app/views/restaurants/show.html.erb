

<h1><%= @restaurant.name %></h1>

<p>addres = <%= @restaurant.address %></p>
<p>Phonenumber = <%= @restaurant.phone_number %></p>

<%= link_to "Create Review", new_restaurant_review_path(@restaurant) , class: "btn btn-primary"  %>
<%= link_to "Home", restaurants_path, class: "btn btn-primary"  %>


<% @restaurant.reviews.each do |review| %>
  <div class="rating-list">
    <p><%= review.content %> </p>
    <p class="number"> <%= review.rating %></p>
  </div>
<% end %>


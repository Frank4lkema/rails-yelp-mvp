<h1>Add a new Restaurant</h1>


<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name, placeholder: 'Add name'%>
  <%= f.input :address, placeholder: 'Add address' %>
  <%= f.input :phone_number, placeholder: 'Add phone number' %>
  <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'], prompt: 'Select '%>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
